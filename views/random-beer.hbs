
{{#each beersFromApi}}

<div class="container d-flex justify-content-center random-container">
    <div class="card mb-3" style="max-width: 600px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image_url}}" class="random-beer" alt="{{this.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text text-muted"> {{this.tagline}}</p>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text"><b>Food Pairings</b></p>
         {{#each this.food_pairing}}
        <ul>
            <li>{{this}}</li>
        </ul>
        {{/each}}
        <p class="card-text">{{this.brewers_tips}}</p>

      </div>
    </div>
  </div>
</div>
</div>

{{/each}} 